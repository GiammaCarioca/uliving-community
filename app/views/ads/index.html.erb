<% content_for :page_title, "Homepage" %>

<nav class="filters">
  <%= active_link_to "All Ads", ads_path, active: { category: nil } %>
  <%= active_link_to "Requests", ads_path(category: "request"), active: { category: "request" } %>
  <%= active_link_to "Offers", ads_path(category: "offer"), active: { category: "offer" } %>
  <%= active_link_to "Exchanges", ads_path(category: "exchange"), active: { category: "exchange" } %>
</nav>

<% @ads.each do |ad| %>

  <div class="ad-item">
    <%= link_to ad_path(ad) do %>
      <h2><%= ad.title %></h2>
      <p>
        <%= pluralize ad.comments.count, "comment" %>
      </p>
    <% end %>
  </div>

<% end %>
