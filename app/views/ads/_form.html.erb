<%= simple_form_for @ad do |f| %>

  <div class="ad-info">
    <%= f.input :category, label: "Pick a category", :as => :select,
      :collection =>  [['Looking for/ I wanna learn', :request], ['I\'m offering/ I can teach you', :offer]] %>
    <%= f.input :title %>
    <%= f.input :body, label: "Your message" %>
  </div>

  <%= f.button :submit, "Save your ad" %>

<% end %>
